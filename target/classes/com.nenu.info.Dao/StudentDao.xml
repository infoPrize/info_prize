<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nenu.info.Dao.StudentDao">
    
    <insert id="add" parameterType="com.nenu.info.common.entities.Student">
        INSERT INTO `t_student`
        VALUES (NULL, #{student.name}, #{student.sex}, #{student.stuNumber},
                #{student.grade}, #{student.majorCode}, #{student.phone}, NULL, NULL)
    </insert>

    <select id="selectStudentByStuNumber" parameterType="String" resultType="com.nenu.info.common.entities.Student">
        SELECT * FROM `t_student`
        WHERE `stu_number` = #{stuNumber}
    </select>

    <select id="listStudentByMajor" resultType="com.nenu.info.common.entities.Student">
        SELECT * FROM `t_student`
        WHERE `major_code` = #{majorCode}
    </select>

    <select id="listStudentByStuName" resultType="com.nenu.info.common.entities.Student">
        SELECT * FROM `t_student`
        WHERE `name` LIKE CONCAT('%', #{stuName}, '%')
    </select>

    <select id="listStudentByStuNameAndMajor" resultType="com.nenu.info.common.entities.Student">
        SELECT * FROM `t_student`
        <where>
            <if test="stuName != '' and stuName != null">
                AND `name` LIKE CONCAT('%', #{stuName}, '%')
            </if>
            <if test="majorCode != null and majorCode > 0">
                AND `major_code` = #{majorCode}
            </if>
        </where>
    </select>

    <select id="selectStudentById" resultType="com.nenu.info.common.entities.Student">
        SELECT * FROM `t_student`
        WHERE `id` = #{id}
    </select>
</mapper>