<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nenu.info.Dao.common.MaterialDao">
    

    <select id="listByTypeAndId" resultType="com.nenu.info.common.entities.common.Material">
        SELECT
        `id` AS id,
        `match_type` AS matchType,
        `match_id` AS matchId,
        `material_name` AS materialName,
        `material_url` AS materialUrl
        FROM `t_material`
        WHERE `match_id` = #{matchId}
        AND `match_type` = #{matchType}
        AND `is_deleted` = 0
    </select>

    <delete id="DelById">
        DELETE FROM `t_material`
        WHERE `id` = #{id}
    </delete>

    <insert id="add">
        INSERT INTO `t_material`
        (`match_type`,`match_id`,`material_name`,`material_url`)
        VALUES
        (#{material.matchType},#{material.matchId},#{material.materialName},#{material.materialUrl})
    </insert>
    
    
</mapper>