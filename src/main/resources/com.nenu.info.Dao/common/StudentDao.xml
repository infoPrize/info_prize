<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nenu.info.Dao.common.StudentDao">
    
    <insert id="add" parameterType="com.nenu.info.common.entities.Student">
        INSERT INTO `t_student`
        VALUES (NULL, #{student.name}, #{student.sex}, #{student.stuNumber},
                #{student.grade}, #{student.majorCode}, #{student.phone}, NULL, NULL)
    </insert>

    <select id="selectStudentByStuNumber" resultType="com.nenu.info.common.entities.Student">
        SELECT * FROM `t_student`
        WHERE `stu_number` = #{stuNumber}
    </select>

    <select id="listStudentByMajor" resultType="com.nenu.info.common.entities.Student">
        SELECT * FROM `t_student`
        WHERE `major_code` = #{majorCode}
    </select>

    <select id="listStudentByStuName" resultType="com.nenu.info.common.entities.Student">
        SELECT * FROM `t_student`
        WHERE `name` LIKE CONCAT('%', #{stuName}, '%')
    </select>

    <select id="listStudentByStuNameAndMajor" resultType="com.nenu.info.common.entities.Student">
        SELECT * FROM `t_student`
        <where>
            <if test="stuName != '' and stuName != null">
                AND `name` LIKE CONCAT('%', #{stuName}, '%')
            </if>
            <if test="majorCode != null and majorCode > 0">
                AND `major_code` = #{majorCode}
            </if>
        </where>
    </select>

    <select id="selectStudentById" resultType="com.nenu.info.common.entities.Student">
        SELECT * FROM `t_student`
        WHERE `id` = #{id}
    </select>

    <!--条件查询-->
    <select id="queryByCondition" resultType="com.nenu.info.common.entities.Student">
        SELECT
        `name` AS name,
        `sex` AS sex,
        `stu_number` AS stuNumber,
        `grade` AS grade,
        `major_code` AS majorCode,
        `phone` AS phone
        FROM `t_student`
        <where>
            <include refid="condition" />
        </where>
    </select>

    <sql id="condition">
        <if test="name != '' and name != null">
            AND `name` LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="sex != null and sex > 0">
            AND `sex` = #{sex}
        </if>
        <if test="stuNumber != '' and stuNumber != null">
            AND `stu_number` LIKE CONCAT('%', #{stuNumber}, '%')
        </if>
        <if test="grade != '' and grade != null">
            AND `grade` LIKE CONCAT('%', #{grade}, '%')
        </if>
        <if test="majorCode != null and majorCode > 0">
            AND `major_code` = #{majorCode}
        </if>
        <if test="phone != '' and phone != null">
            AND `phone` LIKE CONCAT('%', #{phone}, '%')
        </if>

    </sql>

    <delete id="deleteByStuNumber">
        DELETE FROM `t_student` WHERE `stu_number` = #{stuNumber}
    </delete>
</mapper>